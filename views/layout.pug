include includes/iconsRights.pug
doctype html
html
  head
    block head
      title= title
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width initial-scale=1')
      //- font-awesome
      link(rel='stylesheet' href='/css/all.css')
      //- bootstrap
      link(rel='stylesheet' href='/css/bootstrap.min.css')
      //- template styles
      link(rel='stylesheet' href='/stylesheets/style.css')

body
  .container-fluid.main-container.d-flex.w-100.h-100.mx-auto.flex-column
    header
      block header
        nav.navbar.navbar-dark
          h1.brand.navbar-brand.m-0 Capital do Bicho
            a.stretched-link.text-reset(href='/')
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navTop' aria-control='navTop' aria-expanded='false' aria-label='Conta do Usu√°rio')
            span.navbar-toggler-icon

          #navTop.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
              li.nav-item.active
                a.nav-link(href='/') Home
              li.nav-item
                a.nav-link(href='#') Minha Conta
              li.nav-item
                a.nav-link(href='#') Banca Favorita
    main(role='main').container-fluid
      block content

    block scripts
      //- jquery
      script(src='/jquery.slim.min.js')
      //- popperjs and bootstrapjs
      script(src='/js/bootstrap.bundle.min.js')
    block footer
      footer.p-2.text-muted
        .row.no-gutters.justify-content-center
          blockquote.blockquote.text-center.note
            p.m-0 Desenvolvido por 
              a.text-light(href="https://github.com/Kisedev")
                i.fab.fa-github.mr-1
                | Kise
            block rights
              +footerRights(["Logo"], "Smashicons", "https://www.flaticon.com/authors/smashicons")